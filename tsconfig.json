{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    // "paths": {
    //   "@modules/*": ["modules/*"],
    //   "@config/*": ["config/*"],
    //   "@shared/*": ["shared/*"]
    // },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}